!!! 5
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            title
                block title
                    = locals.title
            //-link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
            //-link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Fredericka+the+Great')
            meta(name="description", content=locals.description)
            meta(name="author", content=locals.owner)
            link(rel="icon", type="image/x-icon", href="/images/favicon.ico")
            // 
                | Site last generated on the 
                = moment().format('Do [of] MMMM, YYYY.')
                
            link(rel='stylesheet', href='/styles/main.css')
            
                    
            block scripts
                script(type="text/javascript",  src="//ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js")
                
                link(rel="stylesheet", href="/scripts/jquery/plugins/jquery.lightbox-0.5/jquery.lightbox-0.5.css", media="screen", type="text/css")
                
                script(type="text/javascript", src="/scripts/jquery/plugins/jquery.lightbox-0.5/jquery.lightbox-0.5.min.js")
                
                script(type="text/javascript", src="/scripts/slideshow.js")
                
            
    - var bodyClass = page.metadata.bodyClass || "";
    block localVars
    body(class="#{bodyClass}")
    
    
        script(src="http://processingjs.org/js/processing.min.js")
        
    div(style="width:100%;height:56px;overflow:hidden;position:fixed;top:0;left:0;z-index:99998;")
            canvas(width="90%", height="56px", id="static-canvas", style="width:90%;height:56px;", data-processing-sources="/scripts/static.pde")
    
        script
            $(function() {
                $(window).resize(function() {
                    var pjs = Processing.getInstanceById('static-canvas');
                    pjs.resizeSketch(window.innerWidth, 56);
                } );
            })
    
        header(id="tabs")
            ul.navigation
                li(id="menu-portfolio")
                    a(href="/portfolio/")
                        span Work
                li(id="menu-blog")
                    a(href="http://blog.jessefulton.com/")
                        span Blog
                li(id="menu-contact")
                    a(href="/contact/")
                        span Contact
            div(id="headerlogo")
                a(href="/")
                    span Home

        #wrapper
            #main
                block content
                    p There's no content yet...
                footer
                    block footer


        .clearfix
